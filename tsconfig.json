{
  "extends": "astro/tsconfigs/strict",
  "include": ["src", "astro.config.mjs", "src/env.d.ts"],
  "exclude": ["dist"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@icons/*": ["src/icons/*"],
      "@types": ["src/types/index.ts"],
      "@config": ["src/config/index.ts"]
    },
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["astro/client"]

  }
}
