---
import type { HeroProps } from "@types";
type Props = HeroProps;

const { name, specialty, summary, email } = Astro.props;

const skills = [
  "React.js",
  "Next.js",
  "TypeScript",
  "JavaScript",
  "Zustand",
  "MUI",
  "Tailwind CSS",
  "HTML5",
  "CSS3",
  "Git",
  "Responsive Design",
  "C++",
  "C#", 
  ".NET",
  "SQL server",
  "Oracle",
  "Python",
];
---

<section class="py-24 md:py-32" id="hero">
  <h1
    class="mb-1.5 font-serif text-7xl font-bold tracking-tightest text-white sm:text-8xl md:mb-0 md:text-9xl"
  >
    {name}
  </h1>
  <p
    class="mb-9 font-serif text-4xl leading-[46px] font-bold tracking-tighter text-primary sm:text-5xl md:text-6xl"
  >
    {specialty}
  </p>
  <p class="mb-16 text-base font-normal text-neutral md:text-lg">
    {summary}
  </p>

  <div class="mb-16">
    <h2 class="text-center text-2xl font-bold text-primary sm:text-3xl mb-6">Skills & Technologies</h2>
    <div class="flex flex-wrap justify-center gap-4 px-4">
      {
        skills.map(skill => (
          <span class="px-4 py-2 rounded-full bg-[#1a1d2e] text-white text-sm font-medium">
            {skill}
          </span>
        ))
      }
    </div>
  </div>

  <div class="flex flex-col sm:flex-row gap-4">
    <a
      class="inline-block rounded-full bg-primary px-8 py-5 text-sm leading-5 font-medium text-white"
      href={`mailto:${email}`}
    >
      Get in Touch
    </a>

    <a
      class="inline-block rounded-full border border-primary px-8 py-5 text-sm leading-5 font-medium text-primary hover:bg-primary hover:text-white transition"
      href="/cv.pdf"
      target="_blank"
      rel="noopener noreferrer"
    >
      Download CV
    </a>
  </div>
</section>
